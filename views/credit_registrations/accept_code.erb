<div class="container">
  <div class="row justify-content-center" style="margin-top: 5rem;">
    <div class="col-md-10">
      <h2 class="text-center"><%= I18n.t('page_title.accept_code') %></h2>
    </div>
  </div>

  <div class="row justify-content-center" style="margin-top: 2rem;">
    <div class="col-sm-3">
      <form method="POST" action="/credit_registration/<%= @r.id %>/verification_check/<%= @service_sid %>">
        <div class="form-group">
          <input type="text" name="code" class="form-control form-control-sm" placeholder="Code">
        </div>

        <div class="row justify-content-center">
          <button type="submit" class="btn btn-sm btn-primary"><%= I18n.t('accept_code_form.button') %></button>
        </div>
      </form>
    </div>
  </div>
</div>
