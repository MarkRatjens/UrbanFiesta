<div class="container">
  <% if @r.phone_is_checked? %>
    <div class="row justify-content-center" style="margin-top: 5rem;">
      <div class="col-md-10">
        <h2 class="text-center"><%= I18n.t('page_title.confirm_email_address') %></h2>
      </div>
    </div>

    <div class="row justify-content-center" style="margin-top: 2rem;">
      <div class="col-md-10">
        <p class="text-center"><%= I18n.t('confirm_email_address_page.instruction') %></p>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-center" style="margin-top: 5rem;">
      <div class="col-md-10">
        <h2 class="text-center"><%= I18n.t('page_title.accept_code_invalid') %></h2>
      </div>
    </div>

    <div class="row justify-content-center" style="margin-top: 2rem;">
      <a href="/credit_registration/<%= @r.id %>/verification/<%= params[:service_sid] %>" class="btn btn-primary" role="button" aria-pressed="true">
        <%= I18n.t('invalid_page.button') %>
      </a>
    </div>
  <% end %>

  <div class="row justify-content-center" style="margin-top: 3rem;">
    <div class="text-center">
        <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.nyasa.io"><i class="fab fa-facebook-square fa-3x text-secondary"></i></a>
        <a href="http://twitter.com/share?url=https://www.nyasa.io"><i class="fab fa-twitter fa-3x text-secondary"></i></a>
    </div>
  </div>
</div>
