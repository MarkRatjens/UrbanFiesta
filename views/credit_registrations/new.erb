<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2 class="text-center"><%= I18n.t('page_title.join_form') %></h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-3">
      <form method="POST" action="/credit_registrations/<%= params[:situation] %>">
        <div class="form-group">
          <input type="email" name="email" class="form-control form-control-sm" aria-describedby="emailHelp" placeholder="Email">
        </div>

        <div class="form-group">
          <input type="phone" name="phone" class="form-control form-control-sm" placeholder="Cell Phone Number">
        </div>

        <div class="row justify-content-center">
          <button type="submit" class="btn btn-sm btn-primary"><%= I18n.t('join_form.button') %></button>
        </div>
      </form>
    </div>
  </div>

  <div class="row justify-content-center text-center">
    <div class="col-md-8">
      <p><%= I18n.t('join_form.condition') %></p>
    </div>
  </div>
</div>
